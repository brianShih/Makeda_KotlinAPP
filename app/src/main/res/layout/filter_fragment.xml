    <LinearLayout
            android:id="@+id/layout_outer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <LinearLayout
                android:id="@+id/filter_buttons_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <Button
                    android:id="@+id/filter_backButton"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pp_filter_backfun_desp_zh"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/filter_buttons_layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical" >
            <TextView
                    android:id="@+id/filter_textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="14sp"
                    android:text="@string/filter_textview1_zh"/>
            <GridView   android:id="@+id/filter_cons_content_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:verticalSpacing = "2dp"
                        android:horizontalSpacing = "2dp"
                        android:columnWidth="60dp"
                        android:gravity="center"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth" />
        </LinearLayout>
