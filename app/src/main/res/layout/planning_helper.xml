<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="tw.breadcrumbs.makeda.TripPlanning.TripPlanning_Fragment"
             android:id="@+id/planning_layout">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/planninghelper_cons_layout">
        <ImageButton
                android:id="@+id/planningBackButton"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@+id/planninghelper_cons_layout"
                app:layout_constraintStart_toStartOf="@+id/planninghelper_cons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:foregroundGravity="left"
                android:layout_gravity="start"
                android:background="#00FFFFFF"
                android:contentDescription="@string/dash_tripsched_zh"/>
        <LinearLayout
                android:id="@+id/planning_button_layer"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toEndOf="@+id/planningBackButton"
                app:layout_constraintTop_toTopOf="@+id/planninghelper_cons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/planning_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:text="@string/trip_planName_zh"/>
        </LinearLayout>
        <ImageButton
                android:id="@+id/planning_invite_option"
                app:layout_constraintEnd_toStartOf="@+id/planning_sort_option"
                app:layout_constraintTop_toTopOf="@+id/planninghelper_cons_layout"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/invite_icon"
                android:background="#00FFFFFF"/>
        <ImageButton
                android:id="@+id/planning_sort_option"
                app:layout_constraintEnd_toStartOf="@+id/planning_edit_option"
                app:layout_constraintTop_toTopOf="@+id/planninghelper_cons_layout"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sort_icon"
                android:background="#00FFFFFF"/>
        <ImageButton
                android:id="@+id/planning_edit_option"
                app:layout_constraintEnd_toEndOf="@+id/planninghelper_cons_layout"
                app:layout_constraintTop_toTopOf="@+id/planninghelper_cons_layout"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edite_icon"
                android:background="#00FFFFFF"
        />
        <LinearLayout
                android:id="@+id/days_layout"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@+id/planninghelper_cons_layout"
                app:layout_constraintTop_toBottomOf="@+id/planning_button_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:orientation="horizontal">
            <ImageButton
                    android:id="@+id/add_day"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_f_icon"
                    android:background="#00FFFFFF"
                    />
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tripplanDayTitleRC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ppLists_layout"
                app:layout_constraintStart_toStartOf="@+id/planninghelper_cons_layout"
                app:layout_constraintTop_toBottomOf="@+id/days_layout"
                app:layout_constraintBottom_toBottomOf="@+id/planninghelper_cons_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/splite_line1"
                            android:layout_width="match_parent"
                            android:background="#E6E6E6"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tripplanhelperRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                    />

                    <TextView
                            android:id="@+id/splite_line2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#E6E6E6"
                            android:text="@string/tripPlan_undefList_zh"
                            android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tripplanhelperUndefRC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:clipToPadding="false"
                    />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

